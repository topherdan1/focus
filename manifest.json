{
  "name": "Page action by URL",
  "version": "1.0",
  "description": "Shows a page action for urls which have the letter 'g' in them.",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*","https://fluencia.slack.com/*"],
      "js": ["focus.js"]
    }
  ],
  "permissions" : [
    "declarativeContent"
  ],
  "icons" : {
    "48" : "lotus_icon.png",
    "128" : "lotus_icon.png"
  },
  "manifest_version": 2
}
